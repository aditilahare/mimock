<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="neel" id="0001_create_table_mocks">
        <sql>
            CREATE TABLE mimock_schema.mocks
            (
                id                    integer NOT NULL GENERATED ALWAYS AS IDENTITY ( INCREMENT 1 START 1 ),
                route                 text    NOT NULL,
                method                text    NOT NULL,
                response_content_type text DEFAULT 'application/json',
                status_code           integer NOT NULL,
                response_body         text,
                query_params          text,
                created_at            date    NOT NULL,
                updated_at            date,
                deleted_at            date,
                PRIMARY KEY (id),
                CONSTRAINT unique_route UNIQUE (route, method)
            );
        </sql>
        <rollback>
            <sql>
                DROP TABLE mimock_schema.mocks;
            </sql>
        </rollback>
    </changeSet>
</databaseChangeLog>
